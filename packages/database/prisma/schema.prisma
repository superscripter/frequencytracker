// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  timezone  String?  @default("America/New_York") // User's timezone
  autoSync  Boolean  @default(false) // Auto-sync from Strava on page load

  // Notification preferences
  enableDailyNotifications Boolean @default(false) // Enable daily push notifications
  notificationTime         String? @default("06:00") // Time to send notifications (HH:MM format in user's timezone)

  // UI preferences
  highlightOverdueActivities Boolean @default(false) // Highlight overdue activities with red glow
  showDetailedCardData       Boolean @default(false) // Show detailed stats on activity cards
  showStreakFlame            Boolean @default(true)  // Show flame icon for activity streaks
  cardSize                   String  @default("medium") // Card size: "small", "medium", "large"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Strava integration
  stravaId           String?   @unique
  stravaAccessToken  String?
  stravaRefreshToken String?
  stravaTokenExpiry  DateTime?

  // Relations
  activities        Activity[]
  activityTypes     ActivityType[]
  pushSubscriptions PushSubscription[]
  stravaSyncRules   StravaSyncRule[]
  tags              Tag[]
  offTimes          OffTime[]

  @@map("users")
}

model ActivityType {
  id               String   @id @default(cuid())
  userId           String
  name             String   // e.g., "Run", "Bike", "Swim", "Strength Training"
  description      String?
  desiredFrequency Float    @default(1) // Desired frequency per week
  tagId            String?
  icon             String?  @default("Run") // Tabler icon name for visual representation
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now()) @updatedAt

  // Relations
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  tag             Tag?             @relation(fields: [tagId], references: [id], onDelete: SetNull)
  activities      Activity[]
  stravaSyncRules StravaSyncRule[]
  offTimes        OffTime[]

  @@unique([userId, name]) // Name must be unique per user
  @@index([userId])
  @@index([tagId])
  @@map("activity_types")
}

model Activity {
  id          String   @id @default(cuid())
  userId      String
  typeId      String
  name        String
  date        DateTime
  duration    Int? // in minutes
  distance    Float? // in meters
  notes       String?
  stravaId    String?  @unique // If imported from Strava
  isFromStrava Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  type ActivityType @relation(fields: [typeId], references: [id])

  @@index([userId])
  @@index([typeId])
  @@index([date])
  @@map("activities")
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String   @unique
  p256dh    String   // Public key for encryption
  auth      String   // Auth secret for encryption
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("push_subscriptions")
}

model StravaSyncRule {
  id             String   @id @default(cuid())
  userId         String
  containsText   String   // Text to search for in activity name (case-insensitive)
  activityTypeId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  activityType ActivityType @relation(fields: [activityTypeId], references: [id], onDelete: Cascade)

  @@unique([userId, containsText]) // Each user can only have one rule per text match
  @@index([userId])
  @@map("strava_sync_rules")
}

model Tag {
  id        String   @id @default(cuid())
  userId    String
  name      String   // e.g., "Active", "Leisure", "Competitive"
  color     String?  // Optional hex color for visual grouping
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  activityTypes ActivityType[]
  offTimes      OffTime[]

  @@unique([userId, name]) // Name must be unique per user
  @@index([userId])
  @@map("tags")
}

model OffTime {
  id             String   @id @default(cuid())
  userId         String
  tagId          String?  // Optional - for tag-based off time
  activityTypeId String?  // Optional - for activity-type-based off time
  startDate      DateTime // Start date of off time period (inclusive)
  endDate        DateTime // End date of off time period (inclusive)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tag          Tag?          @relation(fields: [tagId], references: [id], onDelete: Cascade)
  activityType ActivityType? @relation(fields: [activityTypeId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tagId])
  @@index([activityTypeId])
  @@index([startDate, endDate]) // For efficient date range queries
  @@map("off_times")
}
